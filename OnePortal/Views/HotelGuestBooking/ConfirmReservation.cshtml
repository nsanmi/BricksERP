
@{
    ViewBag.Title = "ConfirmReservation";
    Layout = "~/Views/Shared/_BricksLayout.cshtml";
    var reserve = ViewBag.reservation;
}

<div class="k2t-body">
    <div class="k2t-title-bar">
        <div class="container k2t-wrap">
            <h1 class="main-title k2t-cf7-title" style="font-size:36px;color:#283c5a;">
                Booking Room
            </h1>
        </div>
    </div>
    <!-- .k2t-title-bar -->
    <div class="k2t-content no-sidebar k2t-confirm-content">
        <div class="container k2t-wrap">
            <main class="k2t-main page">
                <div class="page-entry">
                    <div class="k2t-reservation-confirm">
                        <div class="k2t-step-f pull-left first">
                            <div class="k2t-step-done">
                                <a> 1 </a>
                            </div>
                            <p class="k2t-p-done"> Choose Date </p>
                        </div>
                        <div class="k2t-step-s pull-left">
                            <div class="k2t-step-done">
                                <a> 2 </a>
                            </div>
                            <p class="k2t-p-done"> Choose Room </p>
                        </div>
                        <div class="k2t-step-f pull-left">
                            <div class="k2t-step-done">
                                <a> 3 </a>
                            </div>
                            <p class="k2t-p-done"> Reservation </p>
                        </div>
                        <div class="k2t-step-fo pull-left last">
                            <div class="k2t-step-current k2t-step-done">
                                <a> 4 </a>
                            </div>
                            <p class="k2t-p-current"> Confirmation </p>
                        </div>
                    </div>
                    <div class="k2t-confirm-info w100 pull-left">
                        <p class="title-confirm">
                            <a href="www.brickspoint.com" rel="home" class="k2t-logo">
                                <img alt="Lyon" src="~/Bricks/images/logo/logo.png" />
                            </a>
                        </p>



                        <p class="title-confirm">Booking Confirmation</p>
                        <p class="sub-title-confirm">Please check information exactly and if you find any mistakes please contact us</p>
                        @using (Html.BeginForm("CompleteReservation", "HotelGuestBooking", FormMethod.Post))
                        {
                    <div class="div-border" hidden>
                        <input type="text" value="@reserve.Email" name="Email" hidden />
                        <input type="text" value="@reserve.Password" name="Password" hidden />
                        <input type="text" value="@reserve.Phone" name="Phone" hidden />
                        <input type="text" value="@reserve.Firstname" name="Firstname" hidden />
                        <input type="text" value="@reserve.Lastname" name="Lastname" hidden />
                        <input type="text" value="@reserve.Address" name="Address" hidden />
                    </div>
                            <div class="div-border" hidden>
                                <input @*type="date"*@ type="text" value="@reserve.reservation_checking_date" name="reservation_checking_date" hidden />
                            </div>
                            <div class="div-border" hidden>
                                <input @*type="date"*@ type="text" value="@reserve.reservation_checkout_date" name="reservation_checkout_date" hidden />
                            </div>
                            <div class="div-border" hidden>
                                <input type="text" value="@reserve.Rate" name="Rate" hidden />
                            </div>
                            <div class="div-border" hidden>
                                <input type="text" value="@reserve.room_type" name="room_type" hidden />
                                <input type="text" value="@reserve.Nextofkinfullname" name="Nextofkinfullname" hidden />

                                <input type="text" value="@reserve.NextofkinPhone" name="room_type" hidden />


                            </div>
                            
                           
                            <input type="text" value="@reserve.Room_id" name="Room_id" hidden />
                            <input type="text" value="@reserve.reservation_comment" name="reservation_comment" hidden />
                            <input type="text" value="@reserve.room_type" name="room_type" hidden />
                            <input type="text" value="@reserve.max_adult" name="max_adult" hidden />
                            <input type="text" value="@reserve.max_children" name="max_children" hidden />
                            <input type="text" value="@reserve.Session" name="Session" hidden />

                            <div class="k2t-your-info pull-left">
                                <div class="k2t-entry-confirm pull-left w100">
                                    <p class="k2t-title-col pull-left w100"> Your Information</p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f "> First Name: </span>
                                        <span class="k2t-col-s"> @reserve.Firstname </span>
                                    </p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Last Name: </span>
                                        <span class="k2t-col-s"> @reserve.Lastname </span>
                                    </p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Email: </span>
                                        <span class="k2t-col-s"> @reserve.Email </span>
                                    </p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Phone: </span>
                                        <span class="k2t-col-s">
                                            <a href="#" style="color:#fff;"> @reserve.Phone </a>
                                        </span>
                                    </p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Address: </span>
                                        <span class="k2t-col-s pull-left" style="line-height:30px">
                                            @reserve.Address
                                        </span>
                                    </p>
                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Next of Kin Full name: </span>
                                        <span class="k2t-col-s"> @reserve.Nextofkinfullname </span>
                                    </p>

                                    <p class="k2t-confirm-p pull-left w100">
                                        <span class="k2t-col-f"> Next of kin Phone: </span>
                                        <span class="k2t-col-s">
                                            <a href="#" style="color:#fff;"> @reserve.NextofkinPhone </a>
                                        </span>
                                    </p>


                                </div>
                                <p class="k2t-confirm-p k2t-col-sf pull-left w100">
                                    <span class="k2t-col-f"> Special Requirements: </span>
                                    <span class="k2t-col-s pull-left">
                                        @reserve.reservation_comment
                                    </span>
                                </p>
                            </div>
                            <div class="k2t-branch-confirm pull-right">
                                <div class="k2t-entry-cr">
                                    <p class="k2t-title-col"> Abuja Branch </p>
                                    <p class="k2t-confirm-p">
                                        <span class="k2t-col-f"> Check In: </span>
                                        <span class="k2t-col-s"> @reserve.reservation_checking_date </span>
                                    </p>
                                    <p class="k2t-confirm-p">
                                        <span class="k2t-col-f"> Check Out: </span>
                                        <span class="k2t-col-s"> @reserve.reservation_checkout_date</span>
                                    </p>
                                    <p class="k2t-confirm-p">
                                        <span class="k2t-col-f"> Room: </span>
                                        <span class="k2t-col-s"> @reserve.room_type </span>
                                    </p>
                                    <p class="k2t-confirm-p">
                                        <span class="k2t-col-f"> Adult: </span>
                                        <span class="k2t-col-s"> @reserve.max_adult</span>
                                    </p>
                                    <p class="k2t-confirm-p">
                                        <span class="k2t-col-f"> Children: </span>
                                        <span class="k2t-col-s"> @reserve.max_children </span>
                                    </p>
                                </div>
                                <div class="k2t-entry-cr k2t-entry-sub">
                                    <p class="k2t-confirm-p k2t-total">
                                        <span class="k2t-col-total"> Total </span>
                                        <span class="k2t-col-price k2t-col-s"> @reserve.Rate </span>
                                    </p>
                                    <p class="k2t-confirm-p k2t-vat">
                                        <span class="k2t-col-vat">7.5% VAT INCLUSIVE </span>
                                        @*<span class="k2t-col-pvat k2t-col-s"> ₦ 128 </span>*@
                                    </p>
                                </div>
                                <p class="k2t-confirm-p kt2-grand">
                                    <span class="k2t-grand-total"> Grand Total </span>
                                    <span class="k2t-col-s"> ₦@reserve.Rate  </span>
                                </p>
                            </div>

                            <div class="k2t-gr-confirm pull-left w100">
                                <a href="@Url.Action("Reservation", "HotelGuestBooking")" class="pull-left btn-back-step">
                                    <i class="zmdi zmdi-long-arrow-left"></i> &nbsp; Back step
                                </a>
                                @*<a href="@Url.Action("CompleteReservation", "HotelGuestBooking")" class="pull-left btn-confirm"> Confirm </a>*@
                                <button type="submit" class="pull-left btn-confirm">Confirm</button>
                            </div>

                        }
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>