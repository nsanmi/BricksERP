
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OtherLayout.cshtml";
}

<div id='calendar'></div>

@section scripts{

    <script src="~/Content/aaa/js/plugins/fullcalendar/moment.min.js"></script>
    <script src="~/Content/aaa/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/aaa/js/popper.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.3.1/main.min.js"></script>*@
    <script src="~/Content/aaa/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/aaa/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/aaa/js/main.js"></script>


    <!-- Custom and plugin javascript -->
    <script src="~/Content/aaa/js/inspinia.js"></script>
    <script src="~/Content/aaa/js/plugins/pace/pace.min.js"></script>

    <!-- jQuery UI  -->
    <script src="~/Content/aaa/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- iCheck -->
    <script src="~/Content/aaa/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Full Calendar -->
    <script src="~/Content/aaa/js/plugins/fullcalendar/fullcalendar.min.js"></script>

    <script>
        
            document.addEventListener('DOMContentLoaded', function () {
                var calendarEl = document.getElementById('calendar');
                //var calendar = new Calendar(calendarEl, {
                //    schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives'
                //});
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
                    timeZone: 'UTC',
                initialView: 'resourceTimelineDay',
                aspectRatio: 1.5,
                headerToolbar: {
                    left: 'prev,next',
                    center: 'title',
                    right: 'resourceTimelineDay,resourceTimelineWeek,resourceTimelineMonth'
                },
                editable: true,
                resourceAreaHeaderContent: 'Rooms', 
                resources: '~/Data/file.json', 
                resources: 'https://fullcalendar.io/demo-resources.json?with-nesting&with-colors', 
                events: 'https://fullcalendar.io/demo-events.json?single-day&for-resource-timeline'
            });

            calendar.render();
        });
    </script>
}


