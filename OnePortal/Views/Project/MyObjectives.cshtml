@using HRM.DAL.Models;
@using HRM.DAL.Util;
@using PagedList.Mvc;
@model PagedList.IPagedList<pm_project_strategic_objective>
@{
    ViewBag.Title = "MyObjectives";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>My Objectives</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("ProjectSpace","Project")">Home</a>
            </li>
            <li class="active">
                <strong>My Objectives</strong>
            </li>
        </ol>
    </div>
</div>


<div class="row">

    <div class="col-lg-12">
        @if (Model.Any())
        {
            foreach (var objective in Model)
            {
                <div class="col-lg-4">
                    <div class="widget-head-color-box navy-bg p-lg text-center">
                        <div class="m-b-md">
                            <h2 class="font-bold no-margins">
                                @objective.objectve
                            </h2>
                            <small>@objective.code</small>
                        </div>
                        <div>
                            <span>@objective.pm_project_objective_activity.Count() Activities</span> |
                            <span>350 Tasks</span>

                        </div>
                    </div>
                    <div class="widget-text-box">
                        <p>@objective.description</p>
                        <div class="text-right">
                            <a class="btn btn-xs btn-white" href="@Url.Action("Objective","Project",new { id = objective.id })"> View </a>
                            <a class="btn btn-xs btn-primary"> Edit</a>
                        </div>
                    </div>
                </div>



            }

        }

    </div>
    <div id='Paging' style="text-align:center">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("MyObjectives", new { page }))
    </div>
    </div>

