@using HRM.DAL.Models;
@model PagedList.IPagedList<pm_project>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MyProjects";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Project list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("ProjectSpace","Project")">Home</a>
            </li>
            <li class="active">
                <strong>My Projects</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>My Projects</h5>
                    
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="project-list">

                        <table class="table table-hover">
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var project in Model)
                                    {
                                        <tr>
                                            <td class="project-status">
                                                <span class="label label-primary">Active</span>
                                            </td>
                                            <td class="project-title">
                                                <a href="@Url.Action("Home","Project",new { id = project.id })">@project.name</a>
                                                <br />
                                                <small>Created </small>
                                            </td>
                                            <td class="project-completion">
                                                @project.code
                                            </td>
                                            <td class="project-people">

                                                @if (project.pm_project_admin.Any())
                                                {
                                                    foreach (var admin in project.pm_project_admin)
                                                    {

                                                        string pic = "/Content/images/profile_images/" + admin.admin_hrm_employee.user_id + ".jpg";
                                                        if (!File.Exists(Server.MapPath(pic)))
                                                        { pic = "/Content/images/a4.jpg"; }

                                                        <a href=""><img alt="image" class="img-circle" src="@pic"></a>
                                                    }
                                                }

                                            </td>
                                            <td class="project-actions">
                                                <a href="@Url.Action("Home","Project",new { id = project.id })"  class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                                                
                                            </td>
                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>

                        <div id='Paging' style="text-align:center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("MyProjects", new { page }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


