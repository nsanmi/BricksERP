@section scripts{
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/fn_leave.js"></script>
    <script src="~/Content/libs/jquery/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function(){


        });

        function DisplayImage(result) {
            if (result.files && result.files[0]) {

                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    $("#imgroom1").attr('src', e.target.result);
                }

                fileReader.readAsDataURL(result.files[0]);
            }

        }

        function populateData(category_id) {
            $.ajax({
                url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Inventory/UpdateCategory/?categoryId=" + category_id,
                context: document.body
            }).done(function (returnVal) {
                var data = JSON.parse(returnVal);
                if (returnVal === "not found")
                    alert("Data was not found");
                $("#uname").val(data.name);
                $("#udescription").val(data.description);

                $("#category_id").val(data.category_id);
            });
        }

        function DeleteCategory(id) {
            if (confirm("Are you sure you want to remove this ProductCategory?")) {
                $.ajax({
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Inventory/DeleteCategory/?id=" + id,
                    context: document.body
                }).done(function (returnVal) {
                    alert(returnVal);
                    location.reload();
                });
            }
        }
        $(document).ready(function () {
            $('#tb_productcategory').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'employee_list' },
                    { extend: 'pdf', title: 'employee_list' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });
    </script>
}

