@model OnePortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Reset password confirmation";
}

@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<div class="passwordBox">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Reset password confirmation</h2>

                <p>
                    Your password has been reset and sent to your email.
                </p>

                <div class="row">

                    <div class="col-lg-12">

                        <div>
                            <p>
                                Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Brickspoint
        </div>
        <div class="col-md-6 text-right">
            <small>© 2020 BRICKSPOINT</small>
        </div>
    </div>
</div>

