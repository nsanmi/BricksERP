@using HRM.DAL.Util;
@using HRM.DAL.Models;
@using System.Data
@using Microsoft.AspNet.Identity;

@using PagedList;


@using PagedList.Mvc;
@model IPagedList<admin_hrm_location>
@{
    ViewBag.Title = "Location";
    var message = ViewBag.message;
     var receivedData = (IQueryable<admin_hrm_location>)ViewBag.requestData;

}

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Location</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>HRM</a>
            </li>
            <li class="active">
                <a>Location</a>

            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Location</h5>
                    <div class="ibox-tools">
                        <button type="button" data-toggle="modal" data-target="#MModal" class="btn btn-primary btn-sm">Create Location</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.message != null)
                        {
                            <div class="alert alert-info alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.message
                            </div>
                        }
                    </div>

                    <div class="project-list">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="tb_location" data-page-length="15">
                                <thead>
                                    <tr>
                                        <th align="center">Name</th>
                                        <th align="center">Note</th>
                                        <th align="center">Province</th>
                                        <th align="center">Time Zone</th>
                                        <th align="center">Zip code</th>
                                        <th align="center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var location in receivedData)
                                    {
                                    <tr>
                                        <td>@location.name</td>
                                        <td> <a data-toggle="modal" href="#comment_modal" data-id="@location.notes" class="openCommentDialog">@location.notes</a> </td>

                                        <td align="center">@location.province</td>
                                        <td align="center">@location.time_zone</td>
                                        <td align="center">@location.zip_code</td>
                                        @*<td><button type="button" data-toggle="modal" data-target="#Updatemodal_@location.id" class="btn btn-primary btn-sm">Edit Location</button></td>*@

                                        @*<td> @Html.ActionLink("Edit", "UpdateLocation", new { locationId = location.id }, new { title = "Click to edit " })</td>*@

                                    <td align="center">
                                        <a data-toggle="modal" data-target="#UModal" class="btn btn-primary btn-sm" style="margin-right:20px" onclick="populateData(@location.id)">Edit <i class="fa fa-edit"></i></a>

                                        <button class="btn btn-sm btn-danger" onclick="DeleteLocation(@location.id)" type="button"><i class="fa fa-trash"></i></button>
                                    </td>

                                        
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*<div id='Paging' style="text-align: center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("indexLocation", new { page }))
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal" id="MModal" aria-hidden="true">
    <div class="modal-dialog" style="width:1250px; height:1000px;">
        <div class="modal-content animated flipInY" style="width:1250px; height:600px;">
            <div class="modal-header">
                Add Location
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body" style="width:1248px; height:450px;">
                <form method="post" action="@Url.Action("CreateLocation","Settings")" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Name">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="note">Note</label>
                            <input type="text" class="form-control" id="note" placeholder="Note">
                        </div>

                        <div class="form-group col-md-4">
                            <label for="provice">Province</label>
                            <input type="text" class="form-control" id="province" placeholder="Province">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="timezone">Time-zone</label>
                            <input type="text" class="form-control" id="timezone" placeholder="Time-Zone">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="zipcode">ZipCode</label>
                            <input type="text" class="form-control" id="zipcode" placeholder="Zipcode">
                        </div>


                    </div>

                    <button type="submit" class="btn btn-primary">Create Location</button>
                </form>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div id="comment_box"></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</a>
        </div>
    </div>
</div>






<div class="modal inmodal" id="UModal" aria-hidden="true">
    <div class="modal-dialog" @*style="width:1250px; height:1000px;"*@>
        <div class="modal-content animated flipInY" @*style="width:1250px; height:600px;"*@>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Location</h4>
            </div>
            <div class="modal-body" @*style="width:1248px; height:450px;"*@>
                <form method="post" action="@Url.Action("UpdateLocation","Settings")" class="form-horizontal">
                    <input type="hidden" name="id" id="id" />
                    <div class="form-group">

                        <label for="unote" class="col-lg-3">Title</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="uname" name="name" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="uphone" class="col-lg-3">Level</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="uphone" name="phone" placeholder="Phone">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="uprovice" class="col-lg-3">Provice</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="uprovice" name="province" placeholder="provice">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="utimezone" class="col-lg-3">Timezone</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="utimezone" name="timezone" placeholder="timezone">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="uzip_code" class="col-lg-3">Zip-code</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="uzip_code" name="zip_code" placeholder="zip_code">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="unote" class="col-lg-3">Note</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="unote" id="note" placeholder="note">

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <button type="submit" id="btn_submit" class="btn btn-primary">Update</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
</div>



@section scripts{
    <script src="~/Content/libs/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/fn_leave.js"></script>
    <script>

        $(document).on("click", ".openCommentDialog", function () {
            $(".modal-body #comment_box").text("");
            var myImageId = $(this).data('id');
            $(".modal-body #comment_box").text(myImageId);
        });

        function DeleteLocation(id) {
            if (confirm("Are you sure you want to remove this location type?")) {
                $.ajax({
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/DeleteLocation/?Id=" + id,
                    context: document.body
                }).done(function (returnVal) {
                    alert(returnVal);
                    location.reload();
                });
            }
            }


    

     $(document).ready(function () {
            $('#tb_location').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'subunit_list' },
                    { extend: 'pdf', title: 'subunit_list' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });



          function populateData(id) {
            $.ajax({
                url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/UpdateLocation/?locationId=" + id,
                context: document.body
            }).done(function (returnVal) {
                var data = JSON.parse(returnVal);
                if (returnVal === "not found")
                    alert("Data was not found");
                $("#uname").val(data.name);
                $("#province").val(data.province);
                $("#phone").val(data.phone);
                $("#uzip_code").val(data.zipcode);
                $("#utimezone").val(data.timezone);
                $("#unote").val(data.note);
                
                $("#id").val(data.id);
            });
        }

    
    </script>
}

