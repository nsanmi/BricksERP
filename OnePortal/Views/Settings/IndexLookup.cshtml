
@using HRM.DAL.Models;

@{
    ViewBag.Title = "Lookup";

    var receivedData = (IQueryable<ws_lookup>)ViewBag.requestData;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Lookup</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>HRM</a>
            </li>
            <li class="active">
                <a>Lookup</a>

            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Lookup</h5>
                    <div class="ibox-tools">

                        <button type="button" data-toggle="modal" data-target="#MModal" class="btn btn-primary btn-sm">Create Lookup</button>

                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.message != null)
                        {
                            <div class="alert alert-info alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.message
                            </div>
                        }
                    </div>

                    <div class="project-list">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="tb_lookup" data-page-length="15">
                                <thead>
                                    <tr>
                                        <th align="center">Orderd</th>
                                        <th align="center">Name</th>

                                        <th align="center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lookup in receivedData)
                                    {
                                        <tr>
                                            <td>@lookup.orderd</td>
                                            <td>@lookup.lookup_name</td>
                                            @*<td><button type="button" data-toggle="modal" data-target="#Updatemodal_@lookup.id" class="btn btn-primary btn-sm">Edit Lookup</button></td>*@

                                            @*<td> @Html.ActionLink("Edit", "UpdateLookup", new { LookupId = lookup.id }, new { title = "Click to edit " })</td>*@


                                        <td align="center">

                                            <a data-toggle="modal" data-target="#UModal" class="btn btn-primary btn-sm" style="margin-right:20px" onclick="populateData(@lookup.id)">Edit <i class="fa fa-edit"></i></a>
                                            <button class="btn btn-sm btn-danger" onclick="DeleteLookup(@lookup.id)" type="button"><i class="fa fa-trash"></i></button>
                                        </td>




                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*<div id='Paging' style="text-align: center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("indexLookup", new { page }))
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal" id="MModal" aria-hidden="true">
    <div class="modal-dialog" style="width:1250px; height:1000px;">
        <div class="modal-content animated flipInY" style="width:1250px; height:600px;">
            <div class="modal-header">
                Add Lookup
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body" style="width:1248px; height:450px;">
                <form method="post" action="@Url.Action("CreateLookup","Settings")" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="orderd">Orderd</label>
                            <input type="text" class="form-control" id="orderd" placeholder="Orderd">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Lookup name">
                        </div>

                    </div>

                    <button type="submit" class="btn btn-primary">Create Lookup</button>
                </form>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div id="comment_box"></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</a>
        </div>
    </div>
</div>



<div class="modal inmodal" id="UModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
               
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="@Url.Action("UpdateLookup","Settings")" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">

                        <div class="form-group">
                            <label for="uname" class="col-lg-3">Title</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="uname" name="name" placeholder="Title">
                            </div>
                        </div>
                      
                        <div class="form-group">
                            <label for="uordered" class="col-lg-3">Orderd</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="uorderd" name="orderd" placeholder="Orderd">
                            </div>
                        </div>

                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn_submit" class="btn btn-primary">Update</button>
                </div>
            </div>

        </div>

    </div>
</div>








@section scripts{
    <script src="~/Content/libs/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/fn_leave.js"></script>
    <script>
 $(document).ready(function () {
            $('#tb_lookup').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'lookup_list' },
                    { extend: 'pdf', title: 'lookup_list' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });



          function populateData(id) {
            $.ajax({
                url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/UpdateLookup/?lookupId=" + id,
                context: document.body
            }).done(function (returnVal) {
                var data = JSON.parse(returnVal);
                if (returnVal === "not found")
                    alert("Data was not found");
                $("#uname").val(data.name);
                $("#uorderd").val(data.orderd);
                
                $("#id").val(data.id);
            });
        }

      
        function DeleteLookup(id) {
            if (confirm("Are you sure you want to remove this lookup type?")) {
                $.ajax({
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/DeleteLookup/?Id=" + id,
                    context: document.body
                }).done(function (returnVal) {
                    alert(returnVal);
                    location.reload();
                });
            }
        }

    </script>
}

