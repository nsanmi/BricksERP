@using HRM.DAL.Util;
@using HRM.DAL.Models;


@{

    var employmentstatus = (admin_hrm_lkup_employment_status)ViewBag.employmentStatus;

    ViewBag.Title = "Edit job title";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Update Employment status</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>HRM</a>
            </li>
            <li>
                <a>Employment status</a>
            </li>
            <li class="active">
                <strong>Employment status</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">

            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Job Employment status </h5>
                </div>

                <div class="ibox-footer">
                    <div class="row">
                        <div class="col-lg-12 ">

                            <div class="panel-body">
                                <form method="post" action="@Url.Action("EmploymentStatus","Settings")" data-parsley-validate class="form-horizontal form-label-left">
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <label for="note">title</label>
                                            <input type="text" id="Id" name="Id" class="form-control col-md-7 col-xs-12" value="@employmentstatus.name" />
                                        </div>



                                    </div>

                                </form>
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary">Update job title</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>


