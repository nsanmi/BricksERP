@using HRM.DAL.Models;

@{
    ViewBag.Title = "Sub unit";

    var receivedData = (IQueryable<admin_hrm_lkup_subunit>)ViewBag.requestData;

}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Sub-unit</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>HRM</a>
            </li>
            <li class="active">
                <a>Subunit</a>

            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Sub-unit</h5>
                    <div class="ibox-tools">
                        <button type="button" data-toggle="modal" data-target="#MModal" class="btn btn-primary btn-sm">Create Subunit</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.message != null)
                        {
                            <div class="alert alert-info alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.message
                            </div>
                        }
                    </div>

                    <div class="full-height-scroll">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="tb_subunit" data-page-length="15">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Level</th>
                                        <th>Lft</th>
                                        <th>Rgt</th>
                                       <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var unit in receivedData)
                                    {
                                        <tr>
                                            <td>@unit.name</td>
                                            <td>@unit.level </td>

                                            <td align="center">@unit.lft</td>
                                            <td align="center">@unit.rgt</td>
                                            @*<td><button type="button" data-toggle="modal" data-target="#Updatemodal_@unit.id" class="btn btn-primary btn-sm">Edit Sub-unit</button></td>*@
                                            @*<td> @Html.ActionLink("Edit", "UpdateSubunit", new { jobTitleId = unit.id }, new { title = "Click to edit " })</td>*@


                                        <td align="center">

                                            <a data-toggle="modal" data-target="#UModal" class="btn btn-primary btn-sm" style="margin-right:20px" onclick="populateData(@unit.id)">Edit <i class="fa fa-edit"></i></a>
                                            <button class="btn btn-sm btn-danger" onclick="DeleteSubunit(@unit.id" type="button"><i class="fa fa-trash"></i></button>
                                        </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*<div id='Paging' style="text-align: center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("indexSubunit", new { page }))
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal" id="MModal" aria-hidden="true">
    <div class="modal-dialog" style="width:1250px; height:1000px;">
        <div class="modal-content animated flipInY" style="width:1250px; height:600px;">
            <div class="modal-header">
                Add Sub-unit
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body" style="width:1248px; height:450px;">
                <form method="post" action="@Url.Action("CreateSubunit","Settings")" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="level">Level</label>
                            <input type="text" class="form-control" id="level" placeholder="Level">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Lft">Lft</label>
                            <input type="text" class="form-control" id="lft" placeholder="lft">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="rgt">RGT</label>
                            <input type="text" class="form-control" id="rgt" placeholder="RGT">
                        </div>



                    </div>

                    <button type="submit" class="btn btn-primary">Create sub-unit</button>
                </form>
            </div>

            <div class="form-group">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div id="comment_box"></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</a>
        </div>
    </div>
</div>



<div class="modal inmodal" id="UModal" aria-hidden="true">
    <div class="modal-dialog" @*style="width:1250px; height:1000px;"*@>
        <div class="modal-content animated flipInY" @*style="width:1250px; height:600px;"*@>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Sub-unit</h4>
            </div>
            <div class="modal-body" @*style="width:1248px; height:450px;"*@>
                <form method="post" action="@Url.Action("UpdateSubunit","Settings")" class="form-horizontal">
                    <input type="hidden" name="id" id="id" />
                    <div class="form-group">

                        <label for="unote" class="col-lg-3">Title</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="uname" name="name" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="ulevel" class="col-lg-3">Level</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" id="ulevel" name="level" placeholder="level">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ulft" class="col-lg-3">Lft</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="lft" id="ulft" placeholder="lft">

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="urgt" class="col-lg-3">Rgt</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="rgt" id="urgt" placeholder="rgt">

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <button type="submit" id="btn_submit" class="btn btn-primary">Update</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
</div>





@section scripts{
    <script src="~/Content/libs/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/fn_leave.js"></script>
    <script>
         $(document).ready(function () {
            $('#tb_subunit').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'subunit_list' },
                    { extend: 'pdf', title: 'subunit_list' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });



          function populateData(id) {
            $.ajax({
                url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/UpdateSubunit/?subunitId=" + id,
                context: document.body
            }).done(function (returnVal) {
                var data = JSON.parse(returnVal);
                if (returnVal === "not found")
                    alert("Data was not found");
                $("#uname").val(data.name);
                $("#ulevel").val(data.level);
                $("#ulft").val(data.lft);
                $("#urgt").val(data.rgt);
                $("#id").val(data.id);
            });
        }

        $(document).on("click", ".openCommentDialog", function () {
            $(".modal-body #comment_box").text("");
            var myImageId = $(this).data('id');
            $(".modal-body #comment_box").text(myImageId);
        });

        function DeleteJobTitle(id) {
            if (confirm("Are you sure you want to remove this subunit type?")) {
                $.ajax({
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/DeleteSubunit/?Id=" + id,
                    context: document.body
                }).done(function (returnVal) {
                    alert(returnVal);
                    location.reload();
                });
            }
        }

     
    </script>
}

