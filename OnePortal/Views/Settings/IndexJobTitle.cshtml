@using HRM.DAL.Models
@{
    ViewBag.Title = "Job title";
    var receivedData = (IQueryable<admin_hrm_lkup_job_title>)ViewBag.requestData;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Job Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>Admin</a>
            </li>
            <li>
                <a href="@Url.Action("Index","Settings")">Settings</a>
            </li>
            <li class="active">
                <a>Job title</a>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Job Title</h5>
                    <div class="ibox-tools">
                        <button type="button" data-toggle="modal" data-target="#MModal" class="btn btn-primary btn-sm">Create Job title</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.message != null)
                        {
                            <div class="alert @ViewBag.alert_type alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.message
                            </div>
                        }
                    </div>
                    <div class="full-height-scroll">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="tb_jobtitle" data-page-length="15">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Comment</th>
                                        <th>Job description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var job in receivedData)
                                {
                                    <tr>
                                        <td>@job.job_title</td>
                                        <td>@job.note</td>
                                        <td>@job.job_description</td>
                                        <td>
                                            <a data-toggle="modal" data-target="#UModal" class="btn btn-primary btn-sm" style="margin-right:20px" onclick="populateData(@job.id)">Edit <i class="fa fa-edit"></i></a>
                                            <a class="btn btn-sm btn-danger" onclick="DeleteJobTitle(@job.id) "type="button">Delete <i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal" id="MModal" aria-hidden="true">
    <div class="modal-dialog" @*style="width:1250px; height:1000px;"*@>
        <div class="modal-content animated flipInY" @*style="width:1250px; height:600px;"*@>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Create New Job Title</h4>
            </div>
            <form method="post" action="@Url.Action("CreateJobTitle","Settings")" class="form-horizontal">
                <div class="modal-body" @*style="width:1248px; height:450px;"*@>
                
                    <div class="form-group">
                        <label for="title" class="col-lg-3">Title</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="job_title" id="title" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="notes" class="col-lg-3">Note</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="note" id="notes" placeholder="Note">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="job_description" class="col-lg-3">Job description</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="job_description" id="job_description" placeholder="Job description">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn_submit" class="btn btn-primary">Create</button>
                </div>
            </form>
            
        </div>
        
    </div>
</div>

<div class="modal inmodal" id="UModal" aria-hidden="true">
    <div class="modal-dialog" @*style="width:1250px; height:1000px;"*@>
        <div class="modal-content animated flipInY" @*style="width:1250px; height:600px;"*@>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Edit Job Title</h4>
            </div>
            <div class="modal-body" @*style="width:1248px; height:450px;"*@>
                <form method="post" action="@Url.Action("UpdateJobTitle", "Settings")" class="form-horizontal">
                    <input type="hidden" name="id" id="id"/>
                    <div class="form-group">
                        <label for="utitle" class="col-lg-3">Title</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="job_title" id="utitle" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="unotes" class="col-lg-3">Note</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="note" id="unotes" placeholder="Note">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ujob_description" class="col-lg-3">Job description</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="job_description" id="ujob_description" placeholder="Job description">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <button type="submit" id="btn_submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
                
            </div>
            
        </div>

    </div>
</div>

@section scripts{
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/fn_leave.js"></script>
    <script>

        function populateData(id) {
            $.ajax({
                url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/UpdateJobTitle/?jobTitleId=" + id,
                context: document.body
            }).done(function (returnVal) {
                var data = JSON.parse(returnVal);
                if (returnVal === "not found")
                    alert("Data was not found");
                $("#utitle").val(data.title);
                $("#ujob_description").val(data.description);
                $("#unotes").val(data.note);
                $("#id").val(data.id);
            });
        }

        function DeleteJobTitle(id) {
            if (confirm("Are you sure you want to remove this job title?")) {
                $.ajax({
                    url: "@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))/Settings/DeleteJobTitle/?Id=" + id,
                    context: document.body
                }).done(function (returnVal) {
                    alert(returnVal);
                    location.reload();
                });
            }
        }
        $(document).ready(function () {
            $('#tb_jobtitle').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'employee_list' },
                    { extend: 'pdf', title: 'employee_list' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });
    </script>
}

