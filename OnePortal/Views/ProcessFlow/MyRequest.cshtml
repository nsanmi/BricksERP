@using WorkFlow.DAL.Data;
@using PagedList.Mvc;
@using HRM.DAL.Util;
@using WorkFlow.DAL;
@model PagedList.IPagedList<bpm_workflow>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MyRequest";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>My Requests</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li class="active">
                <strong>My Requests</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>My Requests</h5>
                    <div class="ibox-tools">
                        <button type="button" data-toggle="modal" data-target="#myModal2" class="btn btn-primary btn-xs">Make a Request</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="project-list">
                        <div class="table-responsive">
                            <table class="table table-bordered ">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Process</th>
                                        <th>Project</th>
                                        <th>Completion</th>
                                        <th>Status</th>
                                        <th>Date created</th>
                                        <th>Responsible Person</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model.Any())
                                    {
                                        foreach (var workflow in Model)
                                        {
                                            var emp = workflow.bpm_workflow_employee.FirstOrDefault();
                                            <tr>
                                                <td>@string.Format("{0}-{1}", workflow.created_at.ToString("dd-MM-yyyy"), workflow.id.ToString().Substring(0, 5).ToUpper())</td>
                                                <td><strong><a href="@Url.Action("Step","ProcessFlow",new { id = workflow.id })">@workflow.title</a> </strong></td>
                                                <td>@workflow.bpm_process.process_name</td>
                                                <td>@workflow.pm_project.name</td>
                                                <td>
                                                    <div class="progress progress-striped active m-b-sm">
                                                        <div style="width: @Util.GetWorkflowPercentage(workflow.workflow)%;" class="progress-bar"></div>
                                                    </div>
                                                </td>
                                                <td>@workflow.ws_lookup.lookup_name</td>
                                                <td>@workflow.created_at.ToString("dd MMM, yyyy HH:mm tt")</td>
                                                <td>
                                                    <a href="@Url.Action("Discard","ProcessFlow",new { id = workflow.id })" class="btn btn-danger btn-xs">Delete</a>
                                                </td>
                                                <td> <button type="button" data-toggle="modal" onclick="$('#workflow_id').val('@workflow.id')" data-target="#myFile" class="btn btn-primary btn-xs">Add Doc</button></td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>

                        <div id='Paging' style="text-align:center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("myrequest", new { page }))
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal" id="myModal2" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("MyRequest", "ProcessFlow", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Make a Request</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Title</label>
                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="title" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Request Type</label>

                        <div class="col-lg-9">
                            @Html.DropDownList("process_id", new SelectList(Util.GetProcesses(), "id", "process_name", null), "Select Request Type", new { @class = string.Format("form-control"), @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Project</label>

                        <div class="col-lg-9">
                            @Html.DropDownList("project_id", new SelectList(OptionUtil.GetProjects(), "id", "name", null), "Select Project", new { @class = string.Format("form-control"), @required = "required" })
                        </div>
                    </div>






                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn_submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        }
    </div>
</div>



<div class="modal inmodal" id="myFile" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("AddFile", "ProcessFlow", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Add file to Request</h4>

                </div>
                <div class="modal-body">


                    <input type="hidden" id="workflow_id" name="workflow_id" />

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Title</label>

                        <div class="col-lg-9">
                            <input type="file" multiple class="form-control" name="files" />
                        </div>
                    </div>

                   





                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn_submit" class="btn btn-primary">Upload</button>
                </div>
            </div>

        }
    </div>
</div>




@section scripts{

    <script src="~/Content/libs/iCheck/icheck.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>

    <script>

        $(document).ready(function () {


            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });



        });


    </script>
}



@section styles{
    <link href="~/Content/libs/iCheck/custom.css" rel="stylesheet" />



}






