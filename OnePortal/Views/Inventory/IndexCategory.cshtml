@using HRM.DAL.Models
@{
    ViewBag.Title = "Product Category";
    var receivedData = (IQueryable<product_category>)ViewBag.requestData;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Inventory</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li>
                <a>Admin</a>
            </li>
            <li>
                <a href="@Url.Action("Index","Inventory")">Inventory</a>
            </li>
            <li class="active">
                <a>Product Category</a>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Product Category</h5>
                    <div class="ibox-tools">
                        <button type="button" data-toggle="modal" data-target="#MModal" class="btn btn-primary btn-sm">Create Product Category</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.message != null)
                        {
                            <div class="alert @ViewBag.alert_type alert-dismissable">
                                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                @ViewBag.message
                            </div>
                        }
                    </div>
                    <div class="full-height-scroll">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered" id="tb_productcategory" data-page-length="15">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Updated Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in receivedData)
                                    {
                                    <tr>
                                        <td>@category.name</td>
                                        <td>@category.description</td>
                                        <td>@category.date_updated</td>
                                        <td>
                                            @*<a data-toggle="modal" data-target="#UModal" class="btn btn-primary btn-sm" style="margin-right:20px" onclick="populateData(@category.category_id)">Edit <i class="fa fa-edit"></i></a>*@
