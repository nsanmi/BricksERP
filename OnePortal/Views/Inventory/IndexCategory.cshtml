                                            @*<a class="@Html.IsSelected(action: "index")">
                                                <a href="@Url.Action("Index", "Employee")">Edit</a>
                                            </a>*@
                                            <a class="btn btn-primary btn-sm"
                                                 onclick="location.href ='@Url.Action("UpdateCat", "Inventory")?category_id=@category.category_id'">Edit
                                            </a>
                                            <a class="btn btn-sm btn-danger" onclick="DeleteCategory(@category.category_id) " type="button">Delete <i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

