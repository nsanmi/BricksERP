@using HRM.DAL.Models;
@using HRM.DAL.Util;
@using PagedList.Mvc;
@model PagedList.IPagedList<pm_project_objective_activity>
@{
    ViewBag.Title = "MyActivities";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>My Activities</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li class="active">
                <strong>My Activities</strong>
            </li>
        </ol>
    </div>
</div>


<div class="row">

    <div class="col-lg-12">
        @if (Model.Any())
        {
            foreach (var activity in Model)
            {

                <div class="col-lg-4">
                    <div class="widget lazur-bg p-xl">

                        <h2>
                            @activity.activity
                        </h2>
                        <ul class="list-unstyled m-t-md">
                            <li>
                                @MvcHtmlString.Create(WebUtility.HtmlDecode(activity.description))
                            </li>
                            <li>
                                <div class="user-friends">
                                    @if (activity.pm_activity_admin.Any())
                                    {
                                        foreach (var admin in activity.pm_activity_admin)
                                        {

                                            string pic = "/Content/images/profile_images/" + admin.admin_hrm_employee.user_id + ".jpg";
                                            if (!File.Exists(Server.MapPath(pic)))
                                            { pic = "/Content/images/a4.jpg";
                                            }

                                            <a href=""><img alt="image" class="img-circle" src="@pic"></a>
                                        }
                                    }
                                </div>
                            </li>
                            <li>
                              
                            </li>
                        </ul>

                    </div>



                    </div>
                 



                    }

                    }

                </div>
    <div id='Paging' style="text-align:center">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("MyActivities", new { page }))
    </div>
</div>

