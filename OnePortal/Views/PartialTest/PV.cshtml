@using WorkFlow.DAL.Data
@using System.Xml.Linq;
@using WorkFlow.DAL;
@{

    var workflow = (bpm_workflow)ViewBag.workflow;
    var definition = workflow.workflow;
    var form = XElement.Parse(workflow.workflow).Element("form");

}

<div class="form-group">
    <label>Pay To</label>
    @Html.DropDownList("vendor", new SelectList(Util.GetVendors(), "id", "name", null), "- Please Select -", new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Pay By</label>
    <select class="form-control"></select>
</div>

<div class="form-group">
    <label>Purpose</label>
    <textarea class="form-control" name="purpose"></textarea>
</div>

<div class="form-group">
    <label>Bank Account</label>
    <input class="form-control" name="bank_account">
</div>


<div class="form-group">
    <label>Cheque number</label>
    <input class="form-control" name="check_number">
</div>

<div class="form-group">
    <label>Amount</label>
    <input class="form-control" name="amount">
</div>

<div class="form-group">
    <label>Conversion Rate</label>
    <input class="form-control" name="conversion_rate">
</div>

<div class="form-group">
    <label>Amount in  Naira</label>
    <input class="form-control" name="amount_ngn">
</div>

<div class="form-group">
    <label>Amount in USD</label>
    <input class="form-control" name="amount_usd">
</div>

<div class="form-group">
    <label>Withholding Tax</label>
   <select name="withholding_tax">
       <option> </option>
   </select>
</div>




