@using WorkFlow.DAL.Data;
@using PagedList.Mvc;
@using HRM.DAL.Util;
@using WorkFlow.DAL;
@model PagedList.IPagedList<bpm_workflow_employee>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MyRequest";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>My Requests</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Noticeboard","Admin")">Administration</a>
            </li>
            <li class="active">
                <strong>Pending Approvals</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>My Pending Approvals</h5>
                    @*<div class="ibox-tools">
                            <button type="button" data-toggle="modal" data-target="#myModal2" class="btn btn-primary btn-xs">Make a Request</button>
                        </div>*@
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <form action="@Url.Action("mypendingapproval","Workflow")" method="get">
                                <div class="input-group">
                                    @*<input type="hidden" value="@ViewBag.page" name="page" />*@
                                    <input type="text" placeholder="Search" class="input-sm form-control" value="@ViewBag.search" name="search"> <span class="input-group-btn">
                                        <button type="submit" class="btn btn-sm btn-primary"> Go!</button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="project-list">
                        <div class="table-responsive">
                            <table class="table table-bordered ">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Process</th>
                                        <th>Project</th>
                                        <th>Completion</th>
                                        <th>Status</th>
                                        <th>Request Date</th>
                                        <th>Requestor</th>
                                        <th>My Action Required</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model.Any())
                                    {
                                        foreach (var workflow in Model)
                                        {
                                            string style = "";
                                            string action_required = "No";
                                            if (workflow.pending == 1)
                                            {
                                                action_required = "Yes";
                                                style = "background-color: lavenderblush;";
                                            }
                                            <tr style="@style">
                                                <td>@workflow.workflow_id.ToString().Substring(0, 5)</td>
                                                <td><strong><a href="@Url.Action("Step","Workflow",new { id = workflow.workflow_id })">@workflow.bpm_workflow.title</a> </strong></td>
                                                <td>@workflow.bpm_workflow.bpm_process.process_name</td>
                                                <td>@workflow.bpm_workflow.pm_project.name</td>
                                                <td>
                                                    <div class="progress progress-striped active m-b-sm">
                                                        <div style="width: @Util.GetWorkflowPercentage(workflow.bpm_workflow.workflow)%;" class="progress-bar"></div>
                                                    </div>
                                                </td>
                                                <td>@workflow.bpm_workflow.ws_lookup.lookup_name</td>
                                                <td>@workflow.created_at.ToString("dd MMM, yyyy HH:mm tt")</td>
                                                <td>@string.Format("{0} {1}", workflow.bpm_workflow.admin_hrm_employee.emp_lastname, workflow.bpm_workflow.admin_hrm_employee.emp_firstname)</td>
                                                <td>
                                                    @action_required
                                                </td>
                                              
                                               
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        <div id='Paging' style="text-align:center">
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                            of @Model.PageCount

                            @Html.PagedListPager(Model, page => Url.Action("mypendingapproval", new { page = page, search = ViewBag.search }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal" id="myModal2" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        @using (Html.BeginForm("MyRequest", "Workflow", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal-content animated flipInY">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Make a Request</h4>

                </div>
                <div class="modal-body">




                    <div class="form-group">
                        <label class="col-lg-3 control-label">Title</label>

                        <div class="col-lg-9">
                            <input type="text" class="form-control" name="title" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Request Type</label>

                        <div class="col-lg-9">
                            @Html.DropDownList("process_id", new SelectList(Util.GetProcesses(), "id", "process_name", null), null, new { @class = string.Format("form-control") })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Project</label>

                        <div class="col-lg-9">
                            @Html.DropDownList("project_id", new SelectList(OptionUtil.GetProjects(), "id", "name", null), null, new { @class = string.Format("form-control") })
                        </div>
                    </div>






                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn_submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        }
    </div>
</div>



@section scripts{

    <script src="~/Content/libs/iCheck/icheck.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>

    <script>

        $(document).ready(function () {


            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });



        });


    </script>
}



@section styles{
    <link href="~/Content/libs/iCheck/custom.css" rel="stylesheet" />



}

