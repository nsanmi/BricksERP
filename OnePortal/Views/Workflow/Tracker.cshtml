@using WorkFlow.DAL.Data
@using System.Xml.Linq;
@using WorkFlow.DAL;
@using OnePortal.Models;
@using OnePortal.Helper;
@model HtmlInput
@{
    ViewBag.Title = "Step";

    var step = (Step)ViewBag.step;
    //var workflow = (bpm_workflow)ViewBag.workflow;
    //var definition = XElement.Parse(workflow.workflow);

    var workflows = (IQueryable<bpm_workflow>)ViewBag.workflows;
}
@{

}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2></h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">Home</a>
            </li>
            <li class="active">
                <strong>Manage Requests</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            @using (Html.BeginForm("Tracker", "Workflow", FormMethod.Post))
            {

                <div class="ibox-content m-b-sm border-bottom">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group" id="data_5">
                                <label class="font-normal">Select Date range</label>
                                <div class="input-daterange input-group" id="datepicker">
                                    <input type="text" class="form-control-sm form-control" name="start" value="01/01/2020" required="" />
                                    <span class="input-group-addon">to</span>
                                    <input type="text" class="form-control-sm form-control" name="end" value="01/22/2020" required="" />
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-form-labe" for="quantity">Filter</label>
                                <button class="form-control btn btn-success"  type="submit">Filter</button>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="col-form-labe" for="status">Get All</label>
                                @*<button class="form-control" type="reset">Reset</button>*@
                                <button class="btn btn-info form-control" type="button" onclick="location.href = '@Url.Action("Tracker", "Workflow")'" >Reset</button>
                            </div>
                        </div>
                    </div>

                </div>
            }
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Tracker</h5>

                </div>
                <div class="ibox-content">
                    <input type="hidden" name="workflow_id" value="" />

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>Req. No</th>
                                    <th>Item name</th>
                                    <th>Quantity</th>
                                    <th>Process</th>
                                    <th>Activity</th>
                                    <th>Date needed</th>
                                    <th>Manufacturer</th>
                                    <th>Reqstn</th>
                                    <th>RFP?</th>
                                    <th>Bids</th>
                                    <th>Vendor Slctn</th>
                                    <th>PO</th>
                                    <th>Vendor name</th>
                                    <th>Amount</th>
                                    <th>Invoice Received date</th>
                                    <th>GRSN</th>
                                    <th>Payment approved</th>
                                    <th>Payment made date</th>
                                    <th>Payment Received</th>

                                    <th>Remark</th>
                                    <th>Responsible person</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var w_flow in workflows)
                                {
                                    var index = 0;
                                    if (w_flow.process_id == Guid.Parse("2D008467-EA12-4821-A2F2-7568B76039F1"))
                                    {
                                        index = 1;
                                    }
                                    var defn = XElement.Parse(w_flow.workflow);
                                    var req_no = defn.Element("process_number").Value;
                                    var rfq = Util.GetStepPerformDate(defn, 8 + index);
                                    var bids = Util.GetStepPerformDate(defn, 9 + index);

                                    var po = Util.GetStepPerformDate(defn, 15 + index);
                                    var vendor = Util.GetSelectedVendor(defn);

                                    var v_selection = "";
                                    if (defn.Element("vendors").Elements("vendor").Count() > 1)
                                    {
                                        v_selection = "Vendor Slctn";
                                    }
                                    else if (defn.Element("vendors").Elements("vendor").Count() == 1)
                                    {
                                        v_selection = "Sole source";
                                    }


                                    if (defn.Element("form").Element("items").Elements("item").Any())
                                    {
                                        var processName = "";
                                        double total = 0;
                                        foreach (var item in defn.Element("form").Element("items").Elements("item"))
                                        {
                                            <tr>
                                                <td>@req_no</td>
                                                <td>@item.Element("itemname").Value</td>
                                                <td>@item.Element("quantity").Value</td>
                                                <td>
                                                    @if (w_flow.process_id == Guid.Parse("2D008467-EA12-4821-A2F2-7568B76039F1"))
                                                    {
                                                        processName = "Procurement NAIIS";
                                                    }
                                                    else if (w_flow.process_id == Guid.Parse("10471746-0236-4F79-BE27-8AA1CBFF2D92"))
                                                    {
                                                        processName = "Procurement TLO";
                                                    }
                                                    else if (w_flow.process_id == Guid.Parse("C7902F4A-36DD-4FDC-9B0C-B7059034010D"))
                                                    {
                                                        processName = "Procurement";
                                                    }
                                                    else if (w_flow.process_id == Guid.Parse("396E4066-81F1-4311-B076-FC3C53BB3178"))
                                                    {
                                                        processName = "Procurement Admin";
                                                    }
                                                    else if (w_flow.process_id == Guid.Parse("94E9FEBB-6C8E-42E2-B1A2-4DEE7F6E7317"))
                                                    {
                                                        processName = "Procurement";
                                                    }
                                                    else
                                                    {
                                                        processName = "Contact Admin";
                                                    }
                                                    @processName
                                                </td>
                                                <td>@w_flow.pm_project.name</td>
                                                <td></td>
                                                <td></td>
                                                <td>@w_flow.created_at.ToString("MM/dd/yyyy")</td>
                                                <td>@rfq</td>
                                                <td>@bids</td>
                                                <td>@v_selection</td>
                                                <td>@po</td>
                                                @if (vendor != null)
                                                {
                                                    <td>@vendor.company_name</td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                                @if (item.Element("quantity") != null && item.Element("vendors_unit_price") != null)
                                                {

                                                    total += Convert.ToDouble(item.Element("quantity").Value) * Convert.ToDouble(item.Element("vendors_unit_price").Value);
                                                    //var value = (Convert.ToInt32(item.Element("quantity").Value) * Convert.ToInt32(item.Element("unit_price").Value)) / Convert.ToInt32(item.Element("conversion_rate").Value);
                                                    <td>

                                                        @total

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }

                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td>@w_flow.ws_lookup.lookup_name</td>
                                                @if (w_flow.status == 22)
                                                {
                                                    <td>@TransactionHelper.GetResponsiblePerson(defn, w_flow)</td>
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }


                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="project-list">


                    </div>
                </div>
                <div class="ibox-footer">
                    @*<button type="submit" id="btn_submit" class="btn btn-primary">Submit</button>*@
                </div>
            </div>


        </div>
    </div>

</div>

@section scripts{
    <script src="~/Content/libs/iCheck/icheck.min.js"></script>
    <script src="~/Scripts/custom_fns/base.js"></script>
    <script src="~/Scripts/custom_fns/workflow.js"></script>

    <script src="~/Content/libs/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/libs/dataTables/datatables.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#data_5 .input-daterange').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true
            });
        });

        $('table').DataTable({
            dom: '<"html5buttons"B>lTfgitp',
            "pageLength": 50,
            columnDefs: [{
                orderable: true,
                width: '100px'
            }],
            buttons: [
                { extend: 'copy' },
                { extend: 'csv' },
                { extend: 'excel', title: 'employee_list' },
                { extend: 'pdf', title: 'employee_list' },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ]

        });

        $('#data_1 .input-group.date').datepicker({
            format: 'yyyy-mm-dd',
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });


    </script>


}


@section styles{
    <link href="~/Content/libs/dataTables/datatables.min.css" rel="stylesheet">
    <link href="~/Content/libs/datapicker/datepicker3.css" rel="stylesheet">
    <style>

        th {
            background-color: white;
        }
    </style>

}

